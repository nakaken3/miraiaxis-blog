{{- /* /blog/index.json を強制生成（全RegularPagesを日付降順） */ -}}
{{- $pages := site.RegularPages.ByDate.Reverse -}}
[
{{- $first := true -}}
{{- range $pages -}}
  {{- if not $first }},{{ end -}}{{- $first = false -}}
  { "title": {{ .Title | jsonify }}, "section": {{ .Section | jsonify }}, "type": {{ .Type | jsonify }}, "url": {{ .RelPermalink | jsonify }} }
{{- end -}}
]
